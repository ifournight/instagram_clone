
<section class="o-wrapper u-margin-vertical-large">

  <article class="o-wrapper u-margin-bottom-small c-card c-card--primary c-card--small c-signup-card u-align-center">

    <h1 class="o-wrapper u-margin-top u-margin-bottom-tiny c-icon-main c-icon-main__primary"></h1>

    <h6 class="u-text-color-dark-gray"><%= t 'app.slogan' %></h6>

    <%= form_for(:user, url: sign_up_path, html: {class: 'c-form c-form--block c-form--primary u-padding-horizontal-large u-margin-bottom'}) do |f| %>

      <div class="c-form__field">
        <%= f.email_field :email, class: 'c-form__control', autofocus: true, placeholder: User.human_attribute_name(:email) %>
      </div>
      <div class="c-form__field">
        <%= f.text_field :name, class: 'c-form__control', autofocus: true, placeholder: User.human_attribute_name(:name) %>
      </div>
      <div class="c-form__field">
        <%= f.password_field :password, class: 'c-form__control', autofocus: true, placeholder: User.human_attribute_name(:password) %>
      </div>
      <div class="c-form__field">
        <%= f.password_field :password_confirmation, class: 'c-form__control', autofocus: true, placeholder: User.human_attribute_name(:password_confirmation) %>
      </div>

      <div class="c-form__field">
        <%= f.submit t('app.sign_up'), class: 'c-form__field c-btn c-btn--small c-btn--primary'%>
      </div>

      <%= render 'shared/error_messages', object: @user %>

      <div class="notice"><%= notice %></div>
      <div class="alert u-text-color-red"><%= alert %></div>

    <% end %>

    <div class="o-wrapper--small">
      <p class="o-wrapper u-padding-horizontal-large u-text-color-dark-gray"><%= t 'app.sign_up_notice'%></p>
    </div>

  </article>


  <div class="u-align-center o-wrapper c-card c-card--primary c-card--small u-padding">
    <span><%= t 'app.have_an_account?'%> <%= link_to  t('app.please_sign_in'), sign_in_path, class: 'c-link c-link--primary'%></span>
  </div>

</section>
