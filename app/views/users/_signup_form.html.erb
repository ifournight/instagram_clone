<%= form_for( user ) do |f| %>
  <%= render 'shared/error_messages', object: user %>

  <div class="field">
    <%= f.text_field :email, placeholder: User.human_attribute_name(:email) %>
  </div>

  <div class="field">
    <%= f.text_field :name, placeholder: User.human_attribute_name(:name) %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder: User.human_attribute_name(:password) %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, User.human_attribute_name(:password_confirmation) %>
  </div>

  <div class="actions">
    <%= f.submit t 'app.submit' %>
  </div>
<% end %>
