<% unless current_user.confirmed? %>
  <p>你还没有验证你的邮箱</p>
<% end %>

<section id="posts-main">
  <section class="u-margin-bottom-large o-wrapper c-post-list c-post-list--main" id="post-list" data-ui-component="post-list-main">

    <%= render @feeds %>

  </section>

  <div class="pagination u-align-center u-margin-bottom">
    <%= link_to_next_page(@feeds, t('app.loadmore'), remote: true, class: 'c-btn c-btn--primary c-btn--small o-wrapper') %>
  </div>
</section>
